<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bgcolor"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_call_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/call_service" />

    <EditText
        android:id="@+id/et_input_query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_your_search" />

    <Button
        android:id="@+id/btn_search_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/call_service_request" />

    <TextView
        android:id="@+id/tv_message_output"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tv_height" />

    <include
        layout="@layout/activity_main_recyclerview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
